<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/gray">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:fontFamily="sans-serif-light"
        android:text="Chill Out 30"
        android:textColor="#0288D1"
        android:textSize="32sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:id="@+id/day_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 1"
                android:textSize="26sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/blue_700"
                android:layout_marginBottom="8dp"
                tools:ignore="HardcodedText" />


            <TextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to Chill Out 30!"
                android:textSize="20sp"
                android:textStyle="italic"
                android:fontFamily="serif"
                android:textColor="@color/blue_500"
                android:layout_marginBottom="16dp"
                tools:ignore="HardcodedText" />


            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/day1"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription" />


            <TextView
                android:id="@+id/caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-light"
                android:text="Take a few moments to set an intention for the next 30 days. Reflect on why youâ€™re here and how you want to feel. Start by taking 5 deep breaths to center yourself."
                android:textColor="#0277BD"
                android:textSize="18sp"
                tools:ignore="HardcodedText,VisualLintLongText" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:text="Chill Out"
        android:textColor="#0288D1"
        android:textSize="14sp"
        tools:ignore="HardcodedText,TextContrastCheck" />

</LinearLayout>
